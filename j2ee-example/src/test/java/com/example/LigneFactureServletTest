package com.example;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class LigneFactureServletTest {

    @Test
    public void testCalculTotal() {
        // Créer une ligne de facture
        LigneFacture ligne = new LigneFacture("Produit A", 2, 10.0);

        // Vérifier que le total est bien calculé
        assertEquals(20.0, ligne.getTotal());
    }

    @Test
    public void testToString() {
        // Créer une ligne de facture
        LigneFacture ligne = new LigneFacture("Produit B", 3, 15.0);

    
        assertEquals("LigneFacture{description='Produit B', quantite=3, prixUnitaire=15.0, total=45.0}", ligne.toString());
    }
}
